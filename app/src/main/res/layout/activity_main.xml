<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/sbb_main" />


        <!-- PERSONAL INFORMATION -->

        <TextView
            style="@style/BlockTitle"
            android:text="Personal Information" />

        <EditText
            android:id="@+id/input_text_name"
            style="@style/GeneralEditTextViews"
            android:hint="@string/input_text_hint_name"
            android:inputType="text" />

        <EditText
            android:id="@+id/input_text_email"
            style="@style/GeneralEditTextViews"
            android:hint="@string/input_text_hint_email"
            android:inputType="text" />

        <CheckBox
            android:id="@+id/checkbox_receive_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/checkbox_text_padding"
            android:text="@string/checkbox_receive_email_summary" />




        <!-- QUIZ -->

        <TextView
            style="@style/BlockTitle"
            android:text="Quiz" />

        <!-- Two Checkbox Questions -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="question one" />

        <CheckBox
            android:id="@+id/oneone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/checkbox_text_padding"
            android:text="A" />

        <CheckBox
            android:id="@+id/onetwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/checkbox_text_padding"
            android:text="B" />

        <CheckBox
            android:id="@+id/onethree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/checkbox_text_padding"
            android:text="C" />

        <CheckBox
            android:id="@+id/onefour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/checkbox_text_padding"
            android:text="D" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="question two" />

        <CheckBox
            android:id="@+id/twoone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/checkbox_text_padding"
            android:text="A" />

        <CheckBox
            android:id="@+id/twotwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/checkbox_text_padding"
            android:text="B" />

        <CheckBox
            android:id="@+id/twothree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/checkbox_text_padding"
            android:text="C" />

        <CheckBox
            android:id="@+id/twofour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/checkbox_text_padding"
            android:text="D" />

        <!-- Two RadioButton Questions -->

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1) Question about this and that" />

            <RadioButton
                android:id="@+id/radio_pirates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Answer One" />

            <RadioButton
                android:id="@+id/radio_ninjas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Answer Two" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2) Question about this and that" />

            <RadioButton
                android:id="@+id/asdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Answer One" />

            <RadioButton
                android:id="@+id/asdfe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:text="Answer Two" />
        </RadioGroup>

        <!-- Two FreeText Questions -->


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question X" />

        <EditText
            android:id="@+id/input_text_questionx"
            style="@style/GeneralEditTextViews"
            android:hint="@string/input_text_hint_email"
            android:inputType="textMultiLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question Y" />

        <EditText
            android:id="@+id/input_text_questiony"
            style="@style/GeneralEditTextViews"
            android:hint="@string/input_text_hint_email"
            android:inputType="textMultiLine" />


        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="submitQuiz"
            android:text="Button" />

    </LinearLayout>

</ScrollView>