<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlockTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="GeneralEditTextViews" >
        <item name="android:layout_marginLeft">@dimen/activity_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_margin</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="GeneralCheckBoxViews" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/checkbox_margin_left</item>
        <item name="android:paddingLeft">@dimen/checkbox_text_padding</item>
    </style>

    <style name="GeneralQuestion" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_above_title</item>
        <item name="android:layout_marginBottom">@dimen/margin_below_title</item>
        <item name="android:layout_marginLeft">@dimen/activity_margin</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GeneralRadioButton" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/checkbox_margin_left</item>
        <item name="android:paddingLeft">@dimen/checkbox_text_padding</item>

    </style>

</resources>
